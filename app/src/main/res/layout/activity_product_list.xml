<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale"
        android:background="@color/LightGray"
        android:textDirection="locale"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
        tools:context=".ui.productlist.ProductListActivity">

        <TextView
            android:id="@+id/list_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:drawableEnd="@drawable/ic_list"
            android:drawablePadding="@dimen/_6sdp"
            android:fontFamily="@font/segoeui"
            android:text="@string/list_label"
            android:textColor="@color/colorprimary"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toTopOf="@id/filter_results"
            app:layout_constraintEnd_toStartOf="@id/innerLine"
            app:layout_constraintStart_toStartOf="@id/filter_results"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/innerLine"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#4D363636"
            app:layout_constraintEnd_toStartOf="@id/grid_textView"
            app:layout_constraintStart_toEndOf="@id/list_textView"
            app:layout_constraintTop_toTopOf="@id/list_textView"

            />

        <TextView

            android:id="@+id/grid_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_grid"
            android:drawablePadding="@dimen/_6sdp"
            android:fontFamily="@font/segoeui"
            android:text="@string/net_textView"
            android:textColor="@color/colorprimary"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="@id/list_textView"
            app:layout_constraintEnd_toStartOf="@id/filter_textView"
            app:layout_constraintStart_toEndOf="@id/list_textView"
            app:layout_constraintTop_toTopOf="@id/list_textView" />

        <View
            android:id="@+id/innerLine2"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="#4D363636"
            app:layout_constraintEnd_toStartOf="@id/filter_textView"
            app:layout_constraintStart_toEndOf="@id/grid_textView"
            app:layout_constraintTop_toTopOf="@id/list_textView" />

        <TextView
            android:id="@+id/filter_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_filter"
            android:drawablePadding="@dimen/_6sdp"
            android:fontFamily="@font/segoeui"
            android:text="@string/filter_label"
            android:textColor="@color/colorprimary"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="@id/list_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/grid_textView"
            app:layout_constraintTop_toTopOf="@id/list_textView" />

        <TextView
            android:id="@+id/filter_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/segoeui"
            android:text="@string/filter_results"
            android:textAlignment="viewStart"
            android:textColor="@color/colorprimary"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_textView" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/product_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_19sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:orientation="vertical"
            app:layoutManager="LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filter_results"
            tools:listitem="@layout/productlist">

        </android.support.v7.widget.RecyclerView>

    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>