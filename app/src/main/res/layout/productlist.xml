<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_12sdp"
    android:layoutDirection="locale"
    android:textDirection="locale"
    tools:context=".ui.productlist.ProductListActivity">

    <ImageView
        android:id="@+id/productimageView"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_115sdp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="@dimen/_6sdp"
        android:src="@drawable/ic_dressgrid"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/textview_oval"
        android:fontFamily="@font/segoeui"
        android:paddingStart="@dimen/_2sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingEnd="@dimen/_2sdp"
        android:paddingBottom="@dimen/_7sdp"
        android:text="30%"
        android:textColor="@color/colorprimary"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="@id/productimageView"
        app:layout_constraintTop_toTopOf="@id/productimageView" />

    <TextView
        android:id="@+id/product_descrption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:fontFamily="@font/segoeui"
        android:maxLines="2"
        android:text="@string/productdesc_label"
        android:textColor="@color/colorprimary"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/rating_bar"
        app:layout_constraintStart_toEndOf="@id/productimageView"
        app:layout_constraintTop_toTopOf="@id/productimageView" />


    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/rating_bar"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@id/product_descrption"
        app:layout_constraintTop_toBottomOf="@id/product_descrption"
        app:layout_constraintBottom_toTopOf="@id/ccurrency_label"
        app:mrb_progressTint="@color/yellow" />

    <TextView
        android:id="@+id/rating_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:text="4.4"
        android:textColor="@color/colorprimary"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintBottom_toBottomOf="@id/rating_bar"
        app:layout_constraintStart_toEndOf="@id/rating_bar"
        app:layout_constraintTop_toTopOf="@id/rating_bar" />

    <TextView
        android:id="@+id/ccurrency_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currency_label"
        android:textColor="@color/colorprimary"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toEndOf="@id/productprice_label"
        app:layout_constraintTop_toBottomOf="@id/rating_bar"
        app:layout_constraintBottom_toBottomOf="@id/productimageView"
        />

    <TextView
        android:id="@+id/productprice_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/productprice_label"
        android:textColor="@color/colorprimary"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintStart_toStartOf="@id/product_descrption"
        app:layout_constraintTop_toTopOf="@id/ccurrency_label" />


    <TextView
        android:id="@+id/prprice_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:text="140.00"
        android:textColor="@color/colorprimary"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintStart_toEndOf="@id/ccurrency_label"
        app:layout_constraintTop_toTopOf="@id/ccurrency_label" />

    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:src="@drawable/ic_like"
        app:layout_constraintBottom_toBottomOf="@id/ccurrency_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ccurrency_label" />
</android.support.constraint.ConstraintLayout>



