<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    android:layoutDirection="locale"
    android:textDirection="locale">


    <ImageView
        android:id="@+id/categories_cell"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_dressgrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha=".82"
        android:background="@drawable/horizental_gradiant_rect"
        app:layout_constraintTop_toTopOf="@id/categoriestype_textView"
        app:layout_constraintBottom_toBottomOf="@id/categoriestype_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/categoriestype_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:fontFamily="@font/din_next_arabic_bold"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_13sdp"
        android:textAlignment="viewStart"
        android:textColor="@color/brown"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>