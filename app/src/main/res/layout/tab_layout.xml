<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:layout_marginStart="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_6sdp"
    android:layout_marginTop="@dimen/_6sdp"
    android:layout_gravity="center">

    <!-- Tab title -->
    <TextView
        android:id="@+id/tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:text="djkndsvnjkdsvnjksdvnkjsdvnjk"
        android:textColor="@color/colorprimary" />

    <!-- Tab divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tab_title"
        android:layout_alignBottom="@id/tab_title"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_toEndOf="@id/tab_title"
        android:alpha=".13"
        android:background="#707070"
        android:gravity="center" />

    <View
        android:id="@+id/selected_line"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_alignStart="@id/tab_title"
        android:layout_alignEnd="@id/tab_title"
        android:layout_below="@id/tab_title"
        android:layout_toEndOf="@id/tab_title"
        android:background="@color/colorprimary"
        android:gravity="center" />
</RelativeLayout>