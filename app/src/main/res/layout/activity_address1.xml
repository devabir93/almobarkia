<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <android.support.constraint.ConstraintLayout xmlns:material="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layoutDirection="locale"
        android:textDirection="locale"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
        tools:context=".ui.address1.Address1Activity">

        <requestFocus material:ignore="MissingConstraints" />


        <ImageView
            android:id="@+id/checked_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:src="@drawable/ic_checked_confirm"
            app:layout_constraintEnd_toStartOf="@id/dottline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/dottline"
            android:layout_width="74dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/dottedline"
            app:layout_constraintBottom_toBottomOf="@id/checked_ic"
            app:layout_constraintEnd_toStartOf="@id/ic_cridet"
            app:layout_constraintStart_toEndOf="@id/checked_ic"
            app:layout_constraintTop_toTopOf="@id/checked_ic"

            />

        <ImageView
            android:id="@+id/ic_cridet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:src="@drawable/ic_cridet"
            app:layout_constraintBottom_toBottomOf="@id/checked_ic"
            app:layout_constraintEnd_toStartOf="@id/dottline2"
            app:layout_constraintStart_toEndOf="@id/dottline"
            app:layout_constraintTop_toTopOf="@id/checked_ic"

            />

        <View
            android:id="@+id/dottline2"
            android:layout_width="74dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_8sdp"
            android:background="@drawable/dottedline"
            app:layout_constraintBottom_toBottomOf="@id/checked_ic"
            app:layout_constraintEnd_toStartOf="@id/pin_iv"
            app:layout_constraintStart_toEndOf="@id/ic_cridet"
            app:layout_constraintTop_toTopOf="@id/checked_ic"

            />

        <ImageView
            android:id="@+id/pin_iv"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:src="@drawable/ic_location"
            app:layout_constraintBottom_toBottomOf="@id/checked_ic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/dottline2"
            app:layout_constraintTop_toTopOf="@id/checked_ic" />

        <TextView
            android:id="@+id/address_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@color/colorprimary"
            android:fontFamily="@font/seguisb"
            android:gravity="center"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:text="@string/newaddress_label"
            android:textColor="@color/brown"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintBottom_toTopOf="@id/lay1"
            app:layout_constraintEnd_toStartOf="@id/list_label"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_weight=".22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/checked_ic" />

        <TextView
            android:id="@+id/list_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/seguisb"
            android:gravity="center"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:text="@string/list_label"
            android:textColor="@color/colorprimary"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintBottom_toBottomOf="@id/address_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_weight=".22"
            app:layout_constraintStart_toEndOf="@id/address_label"
            app:layout_constraintTop_toTopOf="@id/address_label" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/lay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_label">

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/addressspinner"
                android:layout_width="0dp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:fontFamily="@font/segoeui"
                android:gravity="start"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_16sdp"
                android:paddingBottom="@dimen/_16sdp"
                android:text="محافظة 1"
                android:textAlignment="viewStart"
                android:textColor="@color/colorprimary"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintBottom_toTopOf="@id/address2spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"

                app:ms_background_selector="@drawable/textview_stroke" />


            <View
                android:id="@+id/line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorprimary"
                app:layout_constraintEnd_toEndOf="@id/addressspinner"
                app:layout_constraintStart_toStartOf="@id/addressspinner"
                app:layout_constraintTop_toTopOf="@id/addressspinner" />

            <TextView
                android:id="@+id/user_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:background="@color/LightGray"
                android:fontFamily="@font/seguisb"
                android:paddingStart="@dimen/_6sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingEnd="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="@string/mohafza_label"
                android:textAlignment="viewStart"
                android:textColor="@color/colorprimary"
                android:textSize="@dimen/_13ssp"

                app:layout_constraintBottom_toBottomOf="@id/line"
                app:layout_constraintStart_toStartOf="@id/line"
                app:layout_constraintTop_toTopOf="@id/line" />


            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/address2spinner"
                android:layout_width="0dp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:drawablePadding="12dp"
                android:fontFamily="@font/segoeui"
                android:imeOptions="actionNext"

                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_16sdp"
                android:paddingBottom="@dimen/_16sdp"
                android:text="المنطقة"
                android:textAlignment="viewStart"
                android:textColor="@color/colorprimary"
                android:textSize="@dimen/_13ssp"
                app:errorEnabled="true"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:layout_constraintBottom_toTopOf="@id/product_InputEditText"

                app:layout_constraintEnd_toEndOf="@id/addressspinner"
                app:layout_constraintStart_toStartOf="@id/addressspinner"
                app:layout_constraintTop_toBottomOf="@id/addressspinner"
                app:ms_background_selector="@drawable/textview_stroke"
                app:passwordToggleEnabled="true" />

            <View
                android:id="@+id/line3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorprimary"
                app:layout_constraintEnd_toEndOf="@id/address2spinner"
                app:layout_constraintStart_toStartOf="@id/address2spinner"
                app:layout_constraintTop_toTopOf="@id/address2spinner" />

            <TextView
                android:id="@+id/phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:background="@color/LightGray"
                android:fontFamily="@font/seguisb"
                android:paddingStart="@dimen/_6sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingEnd="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="@string/manteqa_label"

                android:textAlignment="viewStart"
                android:textColor="@color/colorprimary"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintBottom_toBottomOf="@id/line3"
                app:layout_constraintStart_toStartOf="@id/line3"
                app:layout_constraintTop_toTopOf="@id/line3" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/product_InputEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/textview_stroke"
                android:fontFamily="@font/segoeui"
                android:gravity="start"
                android:hint="ادخل رقم القطعة"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_16sdp"
                android:textAlignment="viewStart"
                android:textColor="@color/colorprimary"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintBottom_toTopOf="@id/streetnum_InputEditText"
                app:layout_constraintEnd_toEndOf="@id/addressspinner"
                app:layout_constraintStart_toStartOf="@id/addressspinner"
                app:layout_constraintTop_toBottomOf="@id/address2spinner"
                app:layout_constraintVertical_chainStyle="packed" />


            <View
                android:id="@+id/line4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorprimary"
                app:layout_constraintEnd_toEndOf="@id/product_InputEditText"
                app:layout_constraintStart_toStartOf="@id/product_InputEditText"
                app:layout_constraintTop_toTopOf="@id/product_InputEditText" />

            <TextView
                android:id="@+id/productnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:background="@color/LightGray"
                android:fontFamily="@font/seguisb"
                android:paddingStart="@dimen/_6sdp"
                android:paddingTop="@dimen/_1sdp"
                android:paddingEnd="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="@string/peicenum_label"
                android:textAlignment="viewStart"
                android:textColor="@color/colorprimary"
                android:textSize="@dimen/_13ssp"

                app:layout_constraintBottom_toBottomOf="@id/line4"
                app:layout_constraintStart_toStartOf="@id/line4"
                app:layout_constraintTop_toTopOf="@id/line4" />


            <android.support.design.widget.TextInputEditText
                android:id="@+id/streetnum_InputEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/textview_stroke"
                android:fontFamily="@font/segoeui"
                android:gravity="start"
                android:hint="ادخل رقم الشارع"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_16sdp"
                android:textAlignment="viewStart"
                android:textColor="@color/colorprimary"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintBottom_toTopOf="@id/jada_num_InputEditText"
                app:layout_constraintEnd_toEndOf="@id/addressspinner"
                app:layout_constraintStart_toStartOf="@id/addressspinner"
                app:layout_constraintTop_toBottomOf="@id/product_InputEditText"
                app:layout_constraintVertical_chainStyle="packed" />


            <View
                android:id="@+id/line5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorprimary"
                app:layout_constraintEnd_toEndOf="@id/streetnum_InputEditText"
                app:layout_constraintStart_toStartOf="@id/streetnum_InputEditText"
                app:layout_constraintTop_toTopOf="@id/streetnum_InputEditText" />

            <TextView
                android:id="@+id/streetnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:background="@color/LightGray"
                android:fontFamily="@font/seguisb"
                android:paddingStart="@dimen/_6sdp"
                android:paddingTop="@dimen/_1sdp"
                android:paddingEnd="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="@string/streetnum_label"
                android:textAlignment="viewStart"
                android:textColor="@color/colorprimary"

                android:textSize="@dimen/_13ssp"
                app:layout_constraintBottom_toBottomOf="@id/line5"
                app:layout_constraintStart_toStartOf="@id/line5"
                app:layout_constraintTop_toTopOf="@id/line5" />


            <android.support.design.widget.TextInputEditText
                android:id="@+id/jada_num_InputEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:background="@drawable/textview_stroke"
                android:fontFamily="@font/segoeui"
                android:gravity="start"
                android:hint="ادخل رقم الجادة ( الشارع الفرعي)"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_16sdp"
                android:textAlignment="viewStart"
                android:textColor="@color/colorprimary"
                android:textSize="@dimen/_13ssp"

                app:layout_constraintEnd_toEndOf="@id/addressspinner"
                app:layout_constraintStart_toStartOf="@id/addressspinner"
                app:layout_constraintTop_toBottomOf="@id/streetnum_InputEditText"
                app:layout_constraintVertical_chainStyle="packed" />


            <View
                android:id="@+id/line6"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorprimary"
                app:layout_constraintEnd_toEndOf="@id/jada_num_InputEditText"
                app:layout_constraintStart_toStartOf="@id/jada_num_InputEditText"
                app:layout_constraintTop_toTopOf="@id/jada_num_InputEditText" />

            <TextView
                android:id="@+id/jadanumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:background="@color/LightGray"
                android:fontFamily="@font/seguisb"
                android:paddingStart="@dimen/_6sdp"
                android:paddingTop="@dimen/_1sdp"
                android:paddingEnd="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="@string/jadnum_label"
                android:textAlignment="viewStart"
                android:textColor="@color/colorprimary"

                android:textSize="@dimen/_13ssp"
                app:layout_constraintBottom_toBottomOf="@id/line6"
                app:layout_constraintStart_toStartOf="@id/line6"
                app:layout_constraintTop_toTopOf="@id/line6" />
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/back_btt_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@color/colorprimary"
            android:paddingStart="@dimen/_24sdp"
            android:paddingTop="@dimen/_16sdp"
            android:paddingEnd="@dimen/_33sdp"
            android:paddingBottom="@dimen/_16sdp"
            android:textAlignment="viewStart"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_backbtt"
            app:layout_constraintBottom_toBottomOf="@id/back_btt_textView"
            app:layout_constraintEnd_toEndOf="@id/back_btt_textView"
            app:layout_constraintStart_toStartOf="@id/back_btt_textView"
            app:layout_constraintTop_toTopOf="@id/back_btt_textView" />

        <TextView
            android:id="@+id/followup_textView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@color/brown"
            android:drawableEnd="@drawable/ic_next"
            android:fontFamily="@font/seguisb"
            android:paddingStart="@dimen/_40sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="@string/followup_label"
            android:textAlignment="viewStart"
            android:textColor="@color/colorprimary"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintBottom_toBottomOf="@id/back_btt_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/back_btt_textView"

            app:layout_constraintTop_toTopOf="@id/back_btt_textView" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/address_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/back_btt_textView"
            app:layout_constraintTop_toBottomOf="@id/address_label"
            material:listitem="@layout/addresslist" />
    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>